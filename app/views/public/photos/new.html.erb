<div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>写真の情報入力</h2>
      <%= form_with model: @photo,url: public_photos_path, local:true do |f| %>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image,class: "form-control-file user_image", accept: "image/*" %>
      </div>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title,placeholder: "(必須)",class: "form-control title" %>
      </div>

  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_field :introduction,class: "form-control introduction" %>
  </div>

  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location,class: "form-control location" %>
  </div>

  <div class="form-group">
    <%= f.label :lens %>
    <%= f.text_field :lens,class: "form-control lens" %>
  </div>

  <div class="form-group">
    <%= f.label :camera %>
    <%= f.text_field :camera,class: "form-control camera" %>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date,class: "form-control date" %>
  </div>

  <div class="form-group">
    <%=f.submit %>
  </div>

<% end %>
</div>
</div>