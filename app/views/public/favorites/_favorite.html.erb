<% if photo.favorited_by?(current_user) %>
  <p>
    <%= link_to public_photo_favorites_path(photo), method: :delete,remote: true do %>
      ♥<%= photo.favorites.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to public_photo_favorites_path(photo), method: :post,remote: true do %>
      ♡<%= photo.favorites.count %> いいね
    <% end %>
  </p>
<% end %>