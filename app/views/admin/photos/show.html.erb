<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2><%= @photo.title %></h2>
      <%= image_tag @photo.get_image('1200x1200') %><br>
      <%= link_to "削除", admin_photo_path(@photo), method: :delete %>
    </div>

    <div class="col-md-8">
      <p>
        <%= link_to admin_user_path(@photo.user.id) do %>
          <%= image_tag @photo.user.get_profile_image("100x100"),class:"mt-3 rounded-circle"; %>
        <% end %>
      </p>
      <p>by <%= @photo.user.name %></p>
      <p>説明：<%= @photo.introduction %></p>
      <p>撮影場所：<%= @photo.location %></p>
      <p>撮影カメラ：<%= @photo.camera %></p>
      <p>撮影レンズ：<%= @photo.lens %></p>
      <p>撮影日：<%= @photo.date %></p>
    </div>

    <div class='col-md-8'>
      <table class='table'>
        コメント：<%= @photo.comments.count %>件
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Comment</th>
            <th>Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @photo.comments.each do |comment| %>
            <tr>
              <td><%= image_tag comment.user.get_profile_image('100x100')%></td>
              <td><%= comment.user.name %></td>
              <td><%= comment.comment %></td>
              <td><%= comment.created_at.strftime('%Y/%m/%d/%H:%M') %></td>

              <td><%= link_to "削除", admin_photo_comment_path(comment.photo, comment), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


